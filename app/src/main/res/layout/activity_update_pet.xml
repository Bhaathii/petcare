<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".UpdatePetActivity">

    <EditText
        android:id="@+id/updatePetNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update Pet Name"
        android:textSize="16sp"
        android:padding="12dp"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/updatePetAgeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update Pet Age"
        android:textSize="16sp"
        android:padding="12dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/updatePetNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/updatePetSexEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update Pet Sex"
        android:textSize="16sp"
        android:padding="12dp"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/updatePetAgeEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/updatePetBreedEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update Pet Breed"
        android:textSize="16sp"
        android:padding="12dp"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/updatePetSexEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/updateMedicalDatesEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update Medical Dates"
        android:textSize="16sp"
        android:padding="12dp"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:gravity="start|top"
        app:layout_constraintTop_toBottomOf="@id/updatePetBreedEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/updatePetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Pet"
        android:backgroundTint="@color/deepPurple"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/updateMedicalDatesEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>